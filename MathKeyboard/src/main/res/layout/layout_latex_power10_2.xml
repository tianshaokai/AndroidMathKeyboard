<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llyPowerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="3dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llyMultiplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMultiplierNone"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:textSize="20sp"
                android:text="x10"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/llyMultiplier"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvPowerNone"
                android:layout_width="10dp"
                android:layout_height="13dp"
                android:background="@drawable/shape_dotted_stroke"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>